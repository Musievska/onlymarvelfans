{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "types": [
      "node",
      "express"
    ]
  },
  "include": 
       ["./src/**/*.ts"],
        "ts-node": {
          "esm": true,
        },
  "exclude": [
    "node_modules",
    "dist",  ]
}