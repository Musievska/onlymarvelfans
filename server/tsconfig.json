{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "types": ["node", "express"]
  },
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "dist"]
}
